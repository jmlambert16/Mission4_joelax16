@{
    ViewData["Title"] = "Grade Caculator";
}

<!-- grade calculator-->
@model calc_model;

<h2>Grade Calculator</h2>
<p>Enter your percentage for each grade category below</p>
<!--input form-->
<form method="post">
    <label>Assignment</label>
    <input id="assignment" asp-for="assignment" /><br />
    <label>Group Project</label>
    <input id="group" asp-for="group" /><br />
    <label>Quizzes</label>
    <input id="quiz" asp-for="quiz" /><br />
    <label>Midterm Exam</label>
    <input id="midterm" asp-for="midterm" /><br />
    <label>Final Exam</label>
    <input id="final" asp-for="final" /><br />
    <label>INTEX</label>
    <input id="intex" asp-for="intex" /><br />
    <input id="calc" type="submit" value="Submit" />

    <!--output-->
    <p id="percent"></p>
    <p id="grade"></p>

    <div asp-validation-summary="All"></div>
</form>

<!--javascript-->
<script src="js/JavaScript.js"></script>